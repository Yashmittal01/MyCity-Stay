<% layout("/layout/boilerplate") %>
<br><br>
<div class="row"> 
    <div class="col-8 offset-2">
        <body>
            <h1>Create New Listing</h1>
            <form method="post" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter Description" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please provide a short description</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="Image" class="form-label">Image</label>
                        <input name="listing[image]" type="file" class="form-control">
                    </div>
                    <div class="btn-group dropend col-md-4 mt-4">
                        <select class="form-select form-select-sm select-button" name="listing[filter]" aria-label="Small select example" required>
                            <option selected>Open this select menu</option>
                            <option value="trending">Trending</option>
                            <option value="room">Rooms</option>
                            <option value="camping">Camping</option>
                            <option value="iconic-cities">Iconic Cities</option>
                            <option value="mountain">Mountain</option>
                            <option value="castle">Castle</option>
                            <option value="sea-side">Sea side</option>
                            <option value="resort">Resort</option>
                            <option value="dome">Dome</option>
                            <option value="amazing-pools">Amazing pools</option>
                            <option value="tiny-homes">Tiny house</option>
                            <option value="houseboat">HouseBoat</option>
                            <option value="tree-house">TreeHouse</option>
                            <option value="camper-van">Camper van</option>
                            <option value="tower-house">Tower house</option>
                          </select>
                      </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="Price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="xxxx"  class="form-control" required>
                        <div class="invalid-feedback">Enter a valid price</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                        <div class="invalid-feedback">Enter a valid Country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Country" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Delhi" type="text" class="form-control" required>
                    <div class="invalid-feedback">Enter a valid location</div>
                </div>
                <button class="btn btn-dark add-btn">add</button>
            </form>
            <br><br><br><br>
        </body>
    </div>
</div>